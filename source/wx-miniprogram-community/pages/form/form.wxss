/* 表单页样式，匹配截图布局 */

.page {
  min-height: 100vh;
  background: linear-gradient(#ffffff, #f6f6f6);
  padding: 40rpx 30rpx;
}

.upload {
  width: 300rpx;
  height: 300rpx;
  margin: 40rpx auto 60rpx;
  border-radius: 16rpx;
  background: #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.placeholder .camera {
  font-size: 160rpx;
  color: #999;
}

.photo {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.field {
  margin: 20rpx 0;
  border-bottom: 1px solid #eaeaea;
}

.input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.submit {
  margin-top: 40rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #22c1b7;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}