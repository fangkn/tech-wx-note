/* pages/notice/notice.wxss */

/* 页面容器 */
.notice-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}


.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 通知列表 */
.notice-list {
  height: calc(100vh - 120rpx); /*设置列表高度为 视窗高度减去 200rpx */
  padding: 24rpx 30rpx 0;
  box-sizing: border-box; /* 关键：让 padding 参与宽度计算 */
  padding-right: calc(30rpx + env(safe-area-inset-right)); /* 兼容 iPhone 安全区 */
}

/* 通知卡片 */
.notice-item {
  position: relative;
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  overflow: hidden;
}

.notice-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 通知头部 */
.notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.notice-type {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.notice-type.announcement {
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: #ffffff;
}

.notice-type.activity {
  background: linear-gradient(45deg, #4ecdc4, #6dd5ed);
  color: #ffffff;
}

.notice-type.maintenance {
  background: linear-gradient(45deg, #ffa726, #ffcc02);
  color: #ffffff;
}

.notice-type.security {
  background: linear-gradient(45deg, #ef5350, #f48fb1);
  color: #ffffff;
}

.notice-type.service {
  background: linear-gradient(45deg, #66bb6a, #81c784);
  color: #ffffff;
}

.notice-type.payment {
  background: linear-gradient(45deg, #ab47bc, #ce93d8);
  color: #ffffff;
}

.type-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.type-text {
  font-weight: 500;
}

/* 通知状态 */
.notice-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  background: rgba(255, 255, 255, 0.2);
}

.status-text {
  font-size: 22rpx;
  font-weight: 500;
}

.status-text.unread {
  color: #ff6b6b;
}

.status-text.read {
  color: #999999;
}

/* 通知内容 */
.notice-content {
  margin-bottom: 24rpx;
}

.notice-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.notice-summary {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 通知元信息 */
.notice-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.meta-icon {
  margin-right: 8rpx;
  font-size: 26rpx;
}

.meta-text {
  font-size: 24rpx;
}

.priority-tag {
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 未读标识 */
.unread-dot {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff6b6b;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  margin: 0 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.action-icon {
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}