<view class="page">

 <view class="header">
    <view class="header-text">今日异常疑似人员（人）</view>
    <view class="count">{{todayCount}}</view>
  </view>

  <!-- 标签切换 -->
  <view class="tabs">
    <view class="tab" bindtap="goToForm">信息登记</view>
    <view class="divider"></view>
    <view class="tab" bindtap="goToStatistics">数据统计</view>
  </view>

  <!-- 信息登记列表（保留在本页底部） -->
  
  <view class="list">
    <view class="list-title">社区信息列表（{{members.length}}人）</view>
    <block wx:for="{{members}}" wx:key="id">
      <view class="member-item">
        <image class="avatar" src="{{item.avatar}}" mode="aspectFill" />
        <view class="info">
          <view class="name">{{item.name}}</view>
          <view class="region">{{item.region}}</view>
          <view class="building">{{item.building}}</view>
        </view>
        <view class="delete" data-id="{{item.id}}" bindtap="onDelete">删除</view>
      </view>
    </block>
  </view>
</view>