/* camera 页面样式 */

.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #000;
}

.controls {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx;
  background: #111;
}

.btn {
  color: #fff;
  background: #333;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.shutter {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #22c1b7;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.4);
}

.preview {
  width: 100%;
  height: 30vh;
  background: #000;
}

.preview-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #111;
}

.btn.primary { background: #22c1b7; }