/* pages/activity/activity.wxss */

.page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 活动列表 */
.activity-list {
  height: calc(100vh - 200rpx);
}

.activity-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 活动封面 */
.activity-cover {
  position: relative;
  height: 300rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, #f0f2f5, #e1e5e9);
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

/* 活动信息 */
.activity-info {
  padding: 30rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.activity-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 活动元信息 */
.activity-meta {
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #888;
}

.meta-item .icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

.meta-item .text {
  flex: 1;
}

/* 活动底部 */
.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.organizer {
  font-size: 24rpx;
  color: #999;
}

.join-btn {
  background: linear-gradient(45deg, #1890ff, #36cfc9);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: white;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  opacity: 0.8;
  display: block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  color: white;
}

.loading-text {
  font-size: 32rpx;
}